extends layout/main-layout.pug

block content
    main
        if prods.length > 0 
            h1 Available Products
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{ product.title }
                        .card__image 
                            img(src="https://upload.wikimedia.org/wikipedia/commons/8/8e/Shop.svg", alt="A Shop Item")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many events 
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1.product__title No Products