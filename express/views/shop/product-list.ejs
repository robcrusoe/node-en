<%- include('./../includes/head.ejs') %>
  </head>
  <body>
    <%- include('./../includes/navigation.ejs') %>

    <main>
      <% if (prods.length > 0) { %>
        <h1 class="product__title">Available Products</h1>
        <div class="grid">
          <% for(let product of prods) { %>
            <article class="card product-item">
              <header class="card__header">
                <h1 class="product__title"><%= product.title %></h1>
              </header>

              <div class="card__image">
                <img src="https://upload.wikimedia.org/wikipedia/commons/8/8e/Shop.svg" alt="A Shop Item" />
              </div>

              <div class="card__content">
                <h2 class="product__price">$19.99</h2>
                <p class="product__description">A very interesting book about so many events</p>
              </div>

              <div class="card__actions">
                <button class="btn">Add to Cart</button>
              </div>
            </article>
          <% } %>
        </div>
      <% } else { %>
        <h1 class="product__title">No products available!</h1>
      <% } %>
    </main>
<%- include('./../includes/end.ejs') %>