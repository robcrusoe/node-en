<%- include('./../includes/head.ejs') %>
  </head>
  <body>
    <%- include('./../includes/navigation.ejs') %>

    <main>
      <% if (prods.length > 0) { %>
        <h1 class="product__title">Available Products</h1>
        <div class="grid">
          <% for(let product of prods) { %>
            <article class="card product-item">
              <header class="card__header">
                <h1 class="product__title"><%= product.title %></h1>
              </header>

              <div class="card__image">
                <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
              </div>

              <div class="card__content">
                <h2 class="product__price">$<%= product.price %></h2>
                <p class="product__description"><%= product.description %></p>
              </div>

              <div class="card__actions">
                <a href="/admin/edit-product/<%= product._id %>?editMode=true" class="btn_reinforced">Edit</a>
                <form action="/admin/delete-product" method="POST">
                  <input type="hidden" value="<%= product._id %>" name="productId">
                  <button type="submit" class="btn_reinforced">Delete</button>
                </form>
              </div>
            </article>
          <% } %>
        </div>
      <% } else { %>
        <h1 class="product__title">No products available!</h1>
      <% } %>
    </main>
<%- include('./../includes/end.ejs') %>